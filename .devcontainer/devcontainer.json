{
    "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
    "customizations": {
        "codespaces": {
            "openFiles": [
                "README.md",
                "Chatbot.py"
            ]
        },
        "vscode": {
            "settings": {},
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "forwardPorts": [8501],
    "postCreateCommand": "/bin/bash -c 'python3 -m pip install --upgrade pip && python3 -m pip install -r requirements.txt && echo \"export PATH=/home/vscode/.local/bin:$PATH\" >> /home/vscode/.bashrc'",
    "postAttachCommand": {
        "server": "/bin/bash -c 'source /home/vscode/.bashrc && streamlit run Chatbot.py --server.enableCORS false --server.enableXsrfProtection false'"
    },
    "portsAttributes": {
        "8501": {
            "label": "Application",
            "onAutoForward": "openPreview"
        }
    },
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        }
    }
}
