{
    "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
    "customizations": {
        "codespaces": {
          "openFiles": [
            "README.md",
            "Chatbot.py"
          ]
        },
        "vscode": {
          "settings": {},
          "extensions": [
            "ms-python.python",
            "ms-python.vscode-pylance"
          ]
        }
      },
    "forwardPorts": [
        8501
    ],
    "onCreateCommand": "apt-get update && apt-get install -y python3-pip && python3 -m pip install --user -r requirements.txt",
    "postAttachCommand": {
        "server": "python3 -m streamlit run Chatbot.py --server.enableCORS false --server.enableXsrfProtection false"
    },
    "portsAttributes": {
        "8501": {
            "label": "Application",
            "onAutoForward": "openPreview"
        }
    },
    "remoteUser": "vscode",
    "features": {
        "python": "latest"
    }
}